= content_for :header do
  %h1= @character.name.titleize
%table.characters
  - Character.all.each do |c|
    = link_to image_tag("character-icons/#{c.name.downcase}.png", :class => 'thumbnail'), c
.column
  = image_tag("character-icons/#{@character.name}.png", :class => "portrait")
.column
  .box
    %h2 Statistics
    %table.stats
      %tr
        %th Win Rate:
        - if @character.games.count > 0
          %td= (@character.wins.in_league(active_league).count * 100.0 / @character.games.where(:league_id => active_league.id).count).to_i
        - else
          %td No games played.
      %tr
        %th Best Matchup:
        - if @character.wins.count > 0
          %td= @character.best_matchup(active_league).name.titleize
        - else
          %td No wins yet.
      %tr
        %th Strategy Guide:
        - if @character.link
          %td= link_to "Strategy Guide", @character.link
        - else
          %td N/A
  - if @character.games.count > 0
    .box
      %h2 Recent Games
      %ul
        - @character.games.where(:league_id => active_league.id).recent.each do |game|
          %li= character_game_link @character, game
  / .box
  /   %h2 Character Information
  /   - if @character.cards.empty?
  /     We are very sorry - information for this character is coming soon.
  /   - else
  /     %table.cards
