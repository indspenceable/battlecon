= content_for :header do
  %h1 Welcome to Battlecon!
.column
  .box.centered
    %h2 Login
    = form_tag do
      = label_tag :name
      = text_field_tag :name
      %br
      = label_tag :password
      = password_field_tag :password
      %br
      = submit_tag
.column
  .box.centered
    %h2 Register
    = form_for(@player) do |f|
      = f.label :name
      = f.text_field :name
      %br
      = f.label :password
      = f.password_field :password
      %br
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      %br
      = f.label :active_league_id
      = f.text_field :active_league_id
      %br
      = submit_tag
