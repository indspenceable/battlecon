- content_for :header do
  %h1 View Challenge
.box
  %h2 
    - if @challenge.player_name active_player
      I am:
      = @challenge.player_name active_player
    - else
      View Game!
  .board{:style => "width: 365px; margin: auto"}
    - 7.times do |x|
      .space{:class => "position#{x}", :style => "border: 1px solid black; width: 50px; height: 50px; float: left;"}
  %div{:style => "clear: both;"}
  .choices
.column
  .box.p1.player
    .pair
    .character
.column
  .box.p2.player
    .pair
    .character
.box.log{:style => "clear: both;"}
.img-cache{:style => "display: none;"}

:javascript
  $(function() {
    init(#{@challenge.id})
  })