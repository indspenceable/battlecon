!!!
%html
  %head
    %title Battlecon
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .wrapper
      .header
        .content
          = yield :header
      .nav
        .content
          = link_to "Characters", dashboard_path
          |
          - if active_player 
            = link_to "Profile", active_player
            |
            -if active_league
              = link_to "Rankings", rankings_path
              |
              = link_to "Record Play", new_match_path
              |
            = link_to "Logout", logout_path
          - else
            = link_to "Login/Register", login_path
      - if flash.keys.any?
        .content.centered
          - if flash[:error]
            .flash.error= flash[:error]
          - if flash[:success]
            .flash.success= flash[:success]
      .content    
        = yield
      .push
    .footer
      .content
        = link_to "Contact", 'mailto:daniel.patrick.spencer@gmail.com'